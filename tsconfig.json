{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@nordetect/shared/*": ["packages/shared/src/*"],
      "@nordetect/backend/*": ["packages/backend/src/*"],
      "@nordetect/frontend/*": ["packages/frontend/src/*"]
    }
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "**/dist", "**/build"]
}
